# set ft=zsh

ctrl + cmd + alt - j : yabai -m window --focus south || yabai -m display --focus south
ctrl + cmd + alt - k : yabai -m window --focus north || yabai -m display --focus north
ctrl + cmd + alt - h : yabai -m window --focus west || yabai -m display --focus west
ctrl + cmd + alt - l : yabai -m window --focus east || yabai -m display --focus east

ctrl + cmd + alt + shift - j : yabai -m window --warp south || $(yabai -m window --display south && yabai -m display --focus south && yabai -m window --warp last) || yabai -m window --move rel:0:10
ctrl + cmd + alt + shift - k : yabai -m window --warp north || $(yabai -m window --display north && yabai -m display --focus north) || yabai -m window --move rel:0:-10
ctrl + cmd + alt + shift - h : yabai -m window --warp west || $(yabai -m window --display west && yabai -m display --focus west && yabai -m window --warp first) || yabai -m window --move rel:-10:0
ctrl + cmd + alt + shift - l : yabai -m window --warp east || $(yabai -m window --display east && yabai -m display --focus east) || yabai -m window --move rel:10:0

ctrl + cmd + alt - m : yabai -m display --focus recent

ctrl + cmd + alt + shift - m : yabai -m space --display recent

ctrl + cmd + alt - n : yabai -m space --focus next || yabai -m space --focus first
ctrl + cmd + alt - p : yabai -m space --focus prev || yabai -m space --focus last

ctrl + cmd + alt + shift - n : yabai -m window --space next --focus || yabai -m window --space first --focus 
ctrl + cmd + alt + shift - p : yabai -m window --space prev --focus || yabai -m window --space last --focus

ctrl + cmd + alt - t : yabai -m space --create && yabai -m space --focus last
ctrl + cmd + alt - x : yabai -m space --destroy

ctrl + cmd + alt - f : yabai -m window --toggle split

ctrl + cmd + alt - b : yabai -m space --balance

ctrl + cmd + alt - r : skhd -r

